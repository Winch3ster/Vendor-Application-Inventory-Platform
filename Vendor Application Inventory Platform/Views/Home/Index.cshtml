@{
    ViewData["Title"] = "Log in";
}


<style>

    .sign-in-container {
        width: 480px;
        height: 500px;
        border-radius: 30px;
        box-shadow: 0px 10px 10px 1px rgb(158, 158, 158);
        /*box-shadow: none|h-offset v-offset blur spread color |inset|initial|inherit;*/
    }

    .company-logo {
        position: relative;
        width: 100%;
        height: 95px;
        background-color: #4688F1;
        border-radius: 30px 30px 0 0;
        color: white;
        display: flex;
        align-items: center;
    }

        .company-logo h1 {
            margin-left: 10%;
            margin-top: 30px;
        }

    .sign-in-section {
        width: 80%;
        margin-left: 10%;
        margin-right: 10%;
        height: max-content;
        border-radius: 0 0 30px 30px;
        margin-top: 40px;
    }


    .form-group-self {
        width: 100%;
        height: fit-content;
        padding: 10px 0 10px 0;
        display: block;
    }

        .form-group-self label {
            color: rgb(36, 36, 36);
        }

        .form-group-self input {
            background-color: #E7E7E7;
            border-radius: 2px;
            border: none;
            font-size: 14px;
            padding: 5px 2px 5px 1px;
            width: 100%;
        }

    input:focus {
        outline: none;
    }


    .center-element {
        width: 100%;
        height: fit-content;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px 0 10px 0;
    }

    .btn-primary {
        border: none;
        border-radius: 30px;
        background-color: #4688F1;
        color: white;
        padding: 15px 30px 15px 30px;
        font-size: 14px;
        cursor: pointer;
    }


    .anchor-link {
        text-decoration: none;
        color: rgb(36, 36, 36);
    }
</style>

<div class="col-12 d-flex justify-content-center align-items-center vh-100">
    <div class="sign-in-container">
        <div class="company-logo">
            <h1 style="font-weight: normal;">CitiSoft Inc</h1>
        </div>
        <div class="sign-in-section">
            <h2 style="font-weight: normal; color: #4688F1;">Sign In</h2>
            <form id="account" action="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group-self">
                    <label>Employee ID</label>
                    <br>
                    <input type="text" name="" id="" placeholder="C521324@citisoft.ac.uk">
                    <span class="text-danger"></span>
                </div>

                <div class="form-group-self">
                    <label>Password</label>
                    <br>
                    <input type="text">
                    <span class="text-danger"></span>
                </div>

                <!--type="submit"-->
                <div class="center-element">
                    <button type="submit" class="btn-primary">Sign in</button>
                </div>
                <!-- Possible reason why sign in cant do anything is because the user is not registered -->
                <!-- The sign in button is working, need to change the default behaviour of the button-->
            </form>

            <a asp-controller="Home" asp-action="">Link to admin page</a>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
