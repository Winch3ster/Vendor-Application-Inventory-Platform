@using Vendor_Application_Inventory_Platform.Models;
@using Vendor_Application_Inventory_Platform.Areas.Admin.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ToBeReviewedSoftwareVM


@{
    ViewData["title"] = "Register Software";
    Layout = "~/Areas/Admin/Views/Shared/_AdminControlPanel.cshtml";
}


<h1>This is software to be reviewed page</h1>

<div class="mt-3">
    <ul class="list-unstyled">
    @foreach (var item in Model.Softwares)
    {

    <li>
        <div class="display-employee-block">
            <div class="d-flex justify-content-center align-items-md-center">
                <p class="m-0 medium-font-size">@Html.DisplayFor(modelItem => item.SoftwareID)</p>
            </div>
            <div class="d-flex justify-content-center align-items-md-center">
                <p class="m-0 medium-font-size">@Html.DisplayFor(modelItem => item.SoftwareName)</p>
            </div>


            <a class="btn btn-primary rounded-pill px-4" asp-area="Admin" asp-action="MarkReviewed" asp-route-id="@item.SoftwareID">Mark Reviewed</a>
        </div>
    
    </li>    
    }
 </ul>
 </div>

